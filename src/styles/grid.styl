+md-up-until()
  .md-hidden
    display none !important
+sm-up-until()
  .sm-hidden
    display none !important

.col
  display block
  flex-basis 0
  flex-grow 1
  flex-shrink 1

for n in 1..12
  +responsive-helpers('col-' + n)
    flex none
    width (n / 12) * 100%

.row.wrap
  flex-wrap wrap

+sm-and-up()
  .row
    display flex

+md-and-up()
  .container
    margin-right auto
    margin-left auto
    position relative
    max-width: breakpoint-md
    width: breakpoint-md

+lg-and-up()
  .container
    max-width: breakpoint-lg
    width: breakpoint-lg

+xl-and-up()
  .container
    max-width: breakpoint-xl
    width: breakpoint-xl

section
  padding size-11 size-6
  // padding-top size-11
  // padding-bottom size-11