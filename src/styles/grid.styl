/// Responsive

gap ?= 64px

breakpoint-sm ?= 768px
breakpoint-md ?= 960px
breakpoint-lg ?= 1152px
breakpoint-xl ?= 1344px

and-up(bp)
  bp-size = lookup('breakpoint-' + bp)
  @media screen and (min-width: bp-size + 2 * gap)
    {block}
sm-and-up()
  +and-up('sm')
    {block}
md-and-up()
  +and-up('md')
    {block}
lg-and-up()
  +and-up('lg')
    {block}
xl-and-up()
  +and-up('xl')
    {block}

up-until(bp)
  bp-size = lookup('breakpoint-' + bp)
  @media screen and (max-width: bp-size + 2 * gap)
    {block}
sm-up-until()
  +up-until('sm')
    {block}
md-up-until()
  +up-until('md')
    {block}
lg-up-until()
  +up-until('lg')
    {block}
xl-up-until()
  +up-until('xl')
    {block}

responsive-helpers(sel)
  .{sel}
    {block}

  for bp in ('sm' 'md' 'lg' 'xl')
    +up-until(bp)
      .{bp}-{sel}
        for rule in block
          {rule}
  
///


+md-up-until()
  .md-hidden
    display none !important
+sm-up-until()
  .sm-hidden
    display none !important

.col
  display block
  flex-basis 0
  flex-grow 1
  flex-shrink 1

for n in 1..12
  +responsive-helpers('col-' + n)
    flex none
    width (n / 12) * 100%

.row.wrap
  flex-wrap wrap

+sm-and-up()
  .row
    display flex

+md-and-up()
  .container
    margin-right auto
    margin-left auto
    position relative
    max-width: breakpoint-md
    width: breakpoint-md

+lg-and-up()
  .container
    max-width: breakpoint-lg
    width: breakpoint-lg

+xl-and-up()
  .container
    max-width: breakpoint-xl
    width: breakpoint-xl

section
  padding size-11 size-6
