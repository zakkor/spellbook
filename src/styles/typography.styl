/// Typography

font-1 ?= 12px
font-2 ?= 14px
font-3 ?= 16px
font-4 ?= 18px
font-5 ?= 20px
font-6 ?= 24px
font-7 ?= 30px
font-8 ?= 36px
font-9 ?= 48px
font-10 ?= 60px
font-11 ?= 72px

font-family-body ?= 'Nunito Sans', sans-serif
font-family-heading ?= 'Nunito Sans', sans-serif
font-color ?= c-neutral-d-3

///

for i in (1..11)
  .f-{i}
    font-size: lookup('font-' + i)

.text-short 
  max-width: 20em;
.text-medium 
  max-width: 28em;
.text-long 
  max-width: 35em;

.line-height-small 
  line-height: 1
.line-height-medium 
  line-height: 1.5
.line-height-large 
  line-height: 1.7

.uppercase 
  text-transform: uppercase
  letter-spacing: 0.05em
.bold 
  font-weight: 600


.text-center 
  text-align: center
.text-right 
  text-align: right


.font-heading
  font-family font-family-heading
.font-body
  font-family font-family-body

body 
  font-family: font-family-body
  font-size: font-4
  color: font-color

.control
  color: font-color

h1, h2, h3, h4, h5, h6 
  font-family: font-family-heading
  font-weight: 400
  color: font-color

h1 
  font-size: font-10
h2 
  font-size: font-9
h3 
  font-size: font-8
h4 
  font-size: font-7
h5 
  font-size: font-6
h6 
  font-size: font-5

p 
  line-height: 1.5

input, select, textarea, button
  font-family: inherit
  font-size: inherit

a
  color: c-primary
  font-weight: 600
  letter-spacing: 0.7px
  font-size: font-4
  transition: color 0.2s ease 0s, background-color 0.2s ease 0s, border-color 0.2s ease 0s
  &:hover
    color: c-primary-d-1
  &:active
    color: c-primary-d-2


.underline
  position relative

  &:after
    content ''
    position absolute
    border-bottom 6px solid c-primary
    top 92%
    width 100%
    left 0

  &.slim:after
    border-bottom 3px solid c-primary
    top 96%
